<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="exam">

	<select id="selectQuestionList" parameterType="hashmap" resultType="exam.login.vo.QuestionVO">
      <![CDATA[
            SELECT
                id,
                subject,
                difficulty,
                score,
                contents,
                type,
                date
            FROM
            	question
            ORDER BY id  DESC
        ]]>
	</select>
	
	<insert id="insertQuestion" parameterType="exam.login.vo.QuestionVO">
		  <![CDATA[
        INSERT INTO Question
        (
            subject,
            difficulty, 
            type, 
            score,  
            contents, 
            answer,
            active,
            date
        )
        VALUES
        (
            #{subject},
            #{difficulty}, 
            #{type}, 
            #{score},  
            #{contents}, 
            #{answer},
            'active',
            sysdate()
        )
    ]]>
	</insert>
		



</mapper>